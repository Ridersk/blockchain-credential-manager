{
  "manifest_version": 3,
  "short_name": "BCManager",
  "name": "Blockchain Credentials Manager",
  "description": "Store sensitive informations secure in blockchain Solana platform.",
  "author": "Ridersk",
  "version": "0.0.1",
  "permissions": ["storage", "tabs", "activeTab", "scripting", "alarms"],
  "action": {
    "default_popup": "index.html",
    "default_title": "Blockchain Credentials Manager"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["./contentscript.js"],
      "css": ["./styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module",
    "mode": "module"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "popup_credentials/index.html",
        "popup_credentials/styles.css",
        "assets/action-btn.png"
      ],
      "matches": ["https://*/*"]
    }
  ]
}
